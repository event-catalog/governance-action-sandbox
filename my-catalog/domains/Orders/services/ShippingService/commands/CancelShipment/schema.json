{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "title": "CancelShipment",
    "description": "Schema for cancelling a shipment",
    "properties": {
        "shipmentId": {
            "type": "string",
            "description": "Unique identifier for the shipment"
        },
        "reason": {
            "type": "string",
            "description": "Reason for cancelling the shipment"
        },
        "orderId": {
            "type": "string",
            "description": "Order ID associated with the shipment"
        }
    },
    "required": ["shipmentId"]
}